{
    "variable": [
        {
            "name": [
                {
                    "type": "string",
                    "default": "new-name",
                    "description": "Nuevo nombre para ajustar a nuevos requerimientos"
                }
            ]
        },
        {
            "network": [
                {
                    "type": "string",
                    "default": "lab-net",
                    "description": "Nombre de la red local"
                }
            ]
        },
        {
            "port": [
                {
                    "type": "string",
                    "default": "8080",
