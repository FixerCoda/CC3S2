{
    "variable": [
        {
            "name": [
                {
                    "type": "string",
                    "default": "app1",
                    "description": "Nombre del servidor"
                }
            ]
        },
        {
            "network": [
                {
                    "type": "string",
                    "default": "net1",
                    "description": "Red del servidor"
                }
            ]
        },
        {
            "port": [
                {
                    "type": "string",
                    "default": "8080",
                    "description": "Puerto del servidor"
                }
            ]
        },
        {
            "api_key": [
                {
                    "type": "string",
                    "sensitive": true,
                    "description": "API Key sensible (leer desde ENV: TF_VAR_api_key)"
                }
            ]
        }
    ]
}